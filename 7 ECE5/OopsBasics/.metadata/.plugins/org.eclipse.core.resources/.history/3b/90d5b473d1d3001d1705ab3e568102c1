package practiceQuestions;

public class Diamondpattern {
	public static void main(String[] args) {
		pattern();
	}
	static void pattern() {
		int n=5;
		for(int i=1;i<=n;i++) {
			
			for(int j=1;j<=n-i;j++)
				{
				System.out.print(" ");
				}
			for(int j=1;j<=i;j++)
				{
				System.out.print("* ");
				}
			}
			System.out.println();
//			
//			for(int j=1;j<i;j++)
//			{
//			
//				System.out.print(" ");
//			}
//			for(int j=i;j<=n;j++)
//			{
//				System.out.print("* ");
//			}
//			
//		}
//		
			for(int i=1;i<=n;i++) {
			
			for(int j=1;j<=n-i;j++)
				{
				System.out.print(" ");
				}
			for(int j=1;j<=i;j++)
				{
				System.out.print("* ");
				}
			System.out.println();
			}
	}

}
