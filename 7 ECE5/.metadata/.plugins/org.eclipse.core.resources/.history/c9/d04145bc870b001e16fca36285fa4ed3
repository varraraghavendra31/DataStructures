package com.patterns;
import java.util.Scanner;
public class Sidetriangle {
public static void main(String[] args) {
	System.out.println("enter a num");
	Scanner sc=new Scanner(System.in);
	int n=sc.nextInt();
	for(int i=1;i<=2*n;i++) {
		for(int j=1;j<=n;j++) {
			if(i<n&&i==j) {
				System.out.print("*");
			}
			 if(i>n&&i+j==n+5) {
				System.out.print("*");
			}
			else System.out.print(" ");
		}
		System.out.println();
		
	}
}
}
