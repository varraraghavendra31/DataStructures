package StringPrograms;

public class largestWord {
public static void main(String[] args) {
	String s="raman laxman ram reama mm a";
	int lar=0;
	int count=0;
	for(int i=0;i<s.length();i++) {
		if(s.charAt(i)!=' '&&i<s.length()) {
			count++;
		}
		else {
			System.out.println(count);
			count=0;
		}
		
	}
	System.out.println(count);
}
}
