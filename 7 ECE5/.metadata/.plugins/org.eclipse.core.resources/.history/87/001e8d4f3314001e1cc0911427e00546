package StringPrograms;
import java.util.Scanner;
public class SecondSmallNumInArray {
	static Integer a;
public static void main(String[] args) {
	  int[] array = {1,1,1,2};
	  a=max(array);
	  System.out.println(a);
      Integer result = findSecondSmallest(array);
      System.out.println("Second smallest element: " + result);
  }
	    private static Integer max(int[] array) {
	    	Integer b=0;
	    	for(int n:array) {
	    		if(b<n)b=n;
	    		else b=n;
	    	}
	return b;
}
		public static Integer findSecondSmallest(int[] arr) {
	        if (arr.length < 2) {
	            return null;
	        }

	        int smallest = a;
	        int secondSmallest = a;
	        for (int num : arr) {
	            if (num < smallest) {
	                secondSmallest = smallest;
	                smallest = num;
	            } else if (num < secondSmallest && num != smallest) {
	                secondSmallest = num;
	            }
	        }
	        if (secondSmallest == a) {
	            return null;
	        }

	        return secondSmallest;
	    }
	}
