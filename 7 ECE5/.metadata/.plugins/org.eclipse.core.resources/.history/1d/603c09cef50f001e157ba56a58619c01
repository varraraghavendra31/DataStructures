package patternNumeric;
import java.util.Scanner;
public class Pattern2 {
public static void main(String[] args) {
	m1();
}
public static void m1() {
	int count=0;
	int n=5;
	for(int i=5;i>=1;i--) {
		for(int j=i;j>=i;j--) {
			System.out.print(" ");
		}
		System.out.println(count++);
		for(int j=n/2;j>=i;j--) {
			System.out.print(" ");
		}
		System.out.println();
	}
}
}
