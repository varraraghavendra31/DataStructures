package StringPrograms;

public class largestWord {
public static void main(String[] args) {
	String s="raman laxman ram reama mm a";
	int i=0;
	int count=0;
	while(i<s.length()) {
		count++;
		if(s.charAt(i)==' ') {
			System.out.println(count);
			count=0;
		}
		
		i++;
	}
	System.out.println(count);
}
}
