package StringPrograms;
import java.util.Scanner;
public class SecondSmallNumInArray {
public static void main(String[] args) {
	  int[] array = {1,1,1,2};
	  Integer a=max(array);
	  System.out.println(a);
      Integer result = findSecondSmallest(array);
      System.out.println("Second smallest element: " + result);
  }
	    private static Integer max(int[] array) {
	    	Integer a=0;
	    	for(int n:array) {
	    		if(a<n)a=n;
	    		else a=n;
	    	}
	return a;
}
		public static Integer findSecondSmallest(int[] arr) {
	        if (arr.length < 2) {
	            return null;
	        }

	        int smallest = Integer.MAX_VALUE;
	        int secondSmallest = Integer.MAX_VALUE;
	        for (int num : arr) {
	            if (num < smallest) {
	                secondSmallest = smallest;
	                smallest = num;
	            } else if (num < secondSmallest && num != smallest) {
	                secondSmallest = num;
	            }
	        }
	        if (secondSmallest == Integer.MAX_VALUE) {
	            return null;
	        }

	        return secondSmallest;
	    }
	}
