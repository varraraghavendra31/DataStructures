package com.ravveseh.strings;

public class ReverseTheWordInALine {

	public static void main(String[] args) {
		String s = "java is easy";
		char[]a=s.toCharArray();
		String s2 = "";
		for(int i=a.length-1,j=a.length-1;i>=-1;i--) {
			if(a[i]==' '||i!=-1) {
				String temp="";
				for(int k=i+1;k<=j;k++){
					temp+=a[k];
				}
				if(i!=0)s2+=temp+" ";
				j=i;
			}
			
		}
		System.out.println(s2);
		}
	}
