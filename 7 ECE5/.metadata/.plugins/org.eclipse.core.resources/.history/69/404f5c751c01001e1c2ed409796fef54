package TwoDarrays;

public class PascalTriangle {
public static void main(String[] args) {
	int n=5;
	int[][]a=new int [n][];
	for(int i=0;i<a.length-1;i++) {
		for(int j=0;j<n-i;j++) {
			System.out.print(" ");
		}
		a[i]=new int [i+1];
		for(int j=0;j<a[i].length;j++) {
				if(j==0||j==a.length-1) {
				a[i][j]=1;
			}
				else
					a[i][j]=a[i-1][j-1]+a[i-1][j];
		}
	}
	for(int[]x:a) {
		for(int y:x) {
			System.out.println(y);
		}
	}
	
}
}
