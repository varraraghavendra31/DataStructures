package patternNumeric;
import java.util.Scanner;
public class Pattern2 {
public static void main(String[] args) {
	m1();
}
public static void m1() {
	int count=0;
	int n=5;
	for(int i=1;i<=n;i++) {
		if(i<n/2) {
			
		}
		else
			for(int j=1;j<=i;j++) {
				System.out.print("  ");
				if(j==i)System.out.println(count--);
			}
		
		
		System.out.println();
}
}
}
