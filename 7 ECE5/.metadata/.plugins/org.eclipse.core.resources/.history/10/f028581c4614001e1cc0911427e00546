package com.ravveseh.strings;

public class ReverseTheWordInALine {

	public static void main(String[] args) {
		String s = "java is easy";
		char[]a=s.toCharArray();
		String s2 = "";
		int i=a.length-1,j=a.length-1;
		while(i>=0) {
			while(i>=0&&a[i]!=' ')i--;
			int k=i+1;
			String temp="";
			if(k==0)j=i-1;
			while(k<=j) {
				temp+=a[k];
				k++;
			}
			if(i!=0)s2+=temp+" ";
			i--;
			j=i;
		}
		System.out.println(s2);
		}
	}
