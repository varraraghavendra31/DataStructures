	    public static int findSecondSmallest(int[] arr,int n) {
	        if (arr.length < 2) {
	            return 0;
	        }
	        int smallest =n ;
	        int secondSmallest = n;
	        for (int num : arr) {
	            if (num < smallest) {
	                secondSmallest = smallest;
	                smallest = num;
	            } else if (num < secondSmallest && num != smallest) {
	                secondSmallest = num;
	            }
	        }
	        
	        if (secondSmallest ==n ) {
	            return 0;
	        }

	        return secondSmallest;
	    }
private static int max(int[]arr) {
	int max=0;
	for(int a:arr) {
		if(max<a)max=a;
		else max=a;
	}
	return max;
}
	}
