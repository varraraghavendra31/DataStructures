package StringPrograms;

public class largestWord {
public static void main(String[] args) {
	String s="raman laxman ram reama mm am m ama m";
	int i=0;
	String temp="";
	int lar=0;
	int count=0;
	while(i<s.length()) {
		count++;
		if(s.charAt(i)==' ') {
			System.out.println(count-1);
			count=0;
		}
		else  {
			temp=""+s.charAt(i);
			System.out.print(temp);
			if(lar<count-1) {
				lar=count-1;
				temp=temp;
			}
			
		}
		i++;
	}
	System.out.println(count);
	System.out.print(temp);
}
}
