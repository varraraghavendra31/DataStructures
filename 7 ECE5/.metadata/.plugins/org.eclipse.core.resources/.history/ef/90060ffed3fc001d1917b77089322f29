package com.ravveseh.strings;

public class RverseTheWordEndToStart {
public static void main(String[] args) {
	String s="java is easy";
	int k=s.length();
	String s2="";
	for(int i=k;i>=0;i--) {
		
		if(s.charAt(i)==' '||i==0)
		{
			for(int j=i;j<=k;j++) {
				s2+=s.charAt(j);
				
			}
			k=i;
		}
	}

	System.out.println(s2);
}
}
