package com.ravveseh.strings;

public class ReverseTheWordInALine {

	public static void main(String[] args) {
		String s = "java is easy";
		char[]a=s.toCharArray();
		String s2 = "";
		int i=a.length-1;
		int j=a.length-1;
		while(i>=0) {
			int k;
			if(a[i]==' '||i==0){
				k=i;
				while(k<j) {
					if(i==0) {
						s2+=a[k];
					}
					else 
					s2+=a[k+1];
					k++;
					}
				if(i!=0)s2+=" ";
				j=i;
				}
			i--;
			
		}
		System.out.println(s2);
	}
}